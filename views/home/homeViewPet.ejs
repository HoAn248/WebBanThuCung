<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/header %>
</head>

<body class="bg">
  <div class="container">
    <% include ../partials/toppage %>
      <div class="row d-flex justify-content-around mt-5 scroll-comment">
        <div>
          <div class="card" style="width: 20rem;">
            <img class="card-img-top" src="<%= data.img %>" alt="Card image cap">
            <div class="card-body  d-flex justify-content-center flex-column">
              <h5 class="card-title">
                <%= data.name %>
              </h5>
              <p class="card-text">Thông tin: <%= data.title%>
              </p>
              <p class="card-text">Giá chỉ: <%= convertPrice(data.price) %>
              </p>
              <form action="/cart/<%= data.id %>" method="post">
                <button type="submit" class="btn btn-primary mb-2">Thêm vào giỏ</button>
              </form>
              <a href="/home" class="btn btn-primary">Quay về</a>

            </div>
          </div>
        </div>

        <div class="row" style="height: inherit;">
          <form action="/comment/<%= data.id %>" style="width: 100%;" method="post">
            <div class="input-group">
              <input name="comment" type="text" class="form-control"
                placeholder="Viết những điều bạn nghĩ về sản phẩm ^^" aria-label="Recipient's username"
                aria-describedby="basic-addon2">
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Gửi bình luận</button>
              </div>
            </div>
          </form>
          <ul style="width: 90%;" class="list-group">
            <% listComments.forEach((e,i)=> { %>
              <li class="list-group-item list-group-item-action d-flex align-items-between m-3">
                <div class="img-avt">
                  <img src="<%= e.avt %>" alt="">
                </div>
                <div style="margin-left: 3%; width: 80%;">
                  <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">
                      <%= e.name %>
                    </h5>
                    <form action="/comment/remove/<%= data.id %>/<%=i%>" method="post">
                      <button type="submit" style="border: 0; cursor: pointer;"><i class="bi bi-trash3"></i></button>
                    </form>
                  </div>
                  <p class="mb-1">
                    <%= e.comment %>
                  </p>
                </div>

              </li>
              <% }) %>




          </ul>
        </div>
      </div>

  </div>

  <% include ../partials/footer%>
</body>
<style>
  .scroll-comment {
    overflow: scroll;
    height: 70vh;
    overflow-x: hidden;
  }

  .img-avt {
    width: 100px;
    height: 100px;
  }

  .img-avt img {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }
  .bg {
      padding: 0;
      background-image: url('/images/bghome.jpeg');
      background-repeat: no-repeat;
      background-size: cover;
      height: 90vh;
      display: block;
    }
</style>

</html>